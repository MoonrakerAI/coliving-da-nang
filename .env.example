# Database
KV_URL="your_upstash_kv_url"
KV_REST_API_URL="your_upstash_rest_api_url"
KV_REST_API_TOKEN="your_upstash_rest_api_token"
KV_REST_API_READ_ONLY_TOKEN="your_upstash_read_only_token"
REDIS_URL="your_redis_url"
USE_KV=true

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Blob Storage
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token"

# Email Service
RESEND_API_KEY="your_resend_api_key"

# Stripe
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"

# Development
NODE_ENV=development
SEED_ON_BOOT=false

# Permify (fine-grained authorization)
# Set PERMIFY_ENABLED=true to enable Permify checks
PERMIFY_ENABLED=false
PERMIFY_BASE_URL="http://localhost:3476"
# Optional API token if Permify is protected behind auth (leave empty if not required)
PERMIFY_API_TOKEN=""
# Tenant identifier used in schema/relationship writes (pick a stable ID, e.g., 'default')
PERMIFY_TENANT_ID="default"
# Seed schema and initial relationships (admin assignment) on boot if true
PERMIFY_SEED_ON_BOOT=false

# Admin (Dev seeding only)
ADMIN_EMAIL="admin@coliving-danang.com"
ADMIN_PASSWORD="Admin123!"
